extends ../layout

block content
    .container
        h2.mb-4 Connexion

        if error
            .alert.alert-danger.mb-4= error
        if success
            .alert.alert-success.mb-4= success

        form.form-block(action="/auth/login" method="POST")
            .form-group.mb-3
                label.form-label(for="email") Email
                input#email.form-control(type="email" name="email" required)

            .form-group.mb-3
                label.form-label(for="password") Mot de passe
                input#password.form-control(type="password" name="password" required)

            button.btn.btn-primary(type="submit") Se connecter

        .mt-3
            p Vous n'avez pas de compte ?
                a(href="/auth/register") Inscrivez-vous ici